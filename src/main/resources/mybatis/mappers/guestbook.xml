<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="guestbook">

	<!-- 전체리스트 -->
	<select id="selectList" resultType="com.javaex.vo.GuestbookVo">
      <![CDATA[ 
         select     no,
               		name,
               		password,
                 	content,
                 	reg_date as regDate
         from guest
         order by no desc
      ]]>
	</select>

	<!-- 저장 -->
	<insert id="insert" parameterType="com.javaex.vo.GuestbookVo">
      <![CDATA[ 
         insert into guest
         value(null, #{name}, #{password}, #{content}, now())
      ]]>
	</insert>


	<!-- 삭제 -->
	<insert id="delete" parameterType="com.javaex.vo.GuestbookVo">
      <![CDATA[ 
         delete from guest
         where no=#{no}
         and password=#{password}
      ]]>
	</insert>


	<!-- 번호받고 저장하기 ajax -->
	<insert id="insertSelectKey" parameterType="com.javaex.vo.GuestbookVo">
      <![CDATA[   
          insert into guest
              values ( null, #{name }, #{password }, #{content }, now() )
       ]]>

		<selectKey keyProperty="no" resultType="int" order="AFTER">   
          <![CDATA[
            select last_insert_id()
            ]]>
		</selectKey>
	</insert>


	<!-- 데이터1개 가져오기 -->
	<select id="selectOne" parameterType="int" resultType="com.javaex.vo.GuestbookVo">
      <![CDATA[
         select  no,
                 name,
                 password,
                 content,
                 reg_date regDate
         from guest
         where no = #{no}
      ]]>
	</select>

</mapper>